<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="cn.junmov.mirror.debt.ui.DebtFormViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".debt.ui.DebtFormDialog">

        <cn.junmov.mirror.core.widget.SheetTitle
            android:id="@+id/debt_form_title"
            onDone="@{() -> vm.submit()}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="编辑债务" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/il_debt_summary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/debt_form_title">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="摘要"
                android:maxLines="1"
                android:text="@={vm.summary}" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/il_debt_capital"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/il_debt_summary"
            app:layout_constraintStart_toStartOf="@+id/il_debt_summary"
            app:layout_constraintTop_toBottomOf="@+id/il_debt_summary">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="债务本金"
                android:inputType="numberDecimal"
                android:text="@={vm.capital}" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/il_debt_count"
            style="@style/Theme.Mirror.Spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/il_debt_summary"
            app:layout_constraintStart_toStartOf="@+id/il_debt_summary"
            app:layout_constraintTop_toBottomOf="@+id/il_debt_interest">

            <AutoCompleteTextView
                android:id="@+id/spinner_debt_count"
                arrayRes="@{@stringArray/debt_count}"
                hideKeyboardOnFocus="@{true}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="还款期数"
                android:inputType="none"
                android:text="@={vm.count}" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/il_debt_start_at"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/il_debt_summary"
            app:layout_constraintStart_toStartOf="@+id/il_debt_summary"
            app:layout_constraintTop_toBottomOf="@+id/il_debt_count"
            app:startIconCheckable="true"
            app:startIconDrawable="@drawable/ic_baseline_calendar_today_24">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="首期入账日"
                android:inputType="date"
                android:text="@={vm.startAt}" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/il_debt_interest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/il_debt_summary"
            app:layout_constraintStart_toStartOf="@+id/il_debt_summary"
            app:layout_constraintTop_toBottomOf="@+id/il_debt_capital">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="总利息"
                android:inputType="numberDecimal"
                android:text="@={vm.interest}" />
        </com.google.android.material.textfield.TextInputLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>