<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="cn.junmov.mirror.budget.ui.BudgetViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".budget.ui.BudgetFragment">

        <TextView
            android:id="@+id/label_total_budget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="本月总预算"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/data_total_budget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{vm.total}"
            app:layout_constraintStart_toStartOf="@+id/label_total_budget"
            app:layout_constraintTop_toBottomOf="@+id/label_total_budget"
            tools:text="10000" />

        <TextView
            android:id="@+id/data_used_budget"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@{@string/budget_used(vm.used)}"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="@+id/label_total_budget"
            app:layout_constraintTop_toBottomOf="@+id/data_total_budget"
            tools:text="@string/budget_used" />

        <TextView
            android:id="@+id/data_use_able_budget"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:text="@{@string/budget_use_able(vm.useAble)}"
            app:layout_constraintBaseline_toBaselineOf="@+id/data_used_budget"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            tools:text="@string/budget_use_able" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="205dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_budget"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/data_used_budget"
            tools:itemCount="9"
            tools:listitem="@layout/list_item_budget" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>