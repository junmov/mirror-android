<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:minHeight="@dimen/three_line_min_height">

    <TextView
        android:id="@+id/three_line_primary_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:maxLines="1"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:textColor="?attr/colorOnSurface"
        app:layout_constraintBottom_toTopOf="@+id/three_line_secondary_text"
        app:layout_constraintEnd_toStartOf="@+id/three_line_action_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="primary" />

    <TextView
        android:id="@+id/three_line_secondary_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="?attr/colorOnSurface"
        app:layout_constraintBottom_toTopOf="@+id/three_line_tertiary_text"
        app:layout_constraintEnd_toEndOf="@+id/three_line_primary_text"
        app:layout_constraintStart_toStartOf="@+id/three_line_primary_text"
        app:layout_constraintTop_toBottomOf="@+id/three_line_primary_text"
        tools:text="secondary" />

    <TextView
        android:id="@+id/three_line_tertiary_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/three_line_secondary_text"
        app:layout_constraintTop_toBottomOf="@+id/three_line_secondary_text"
        tools:text="tertiary" />

    <TextView
        android:id="@+id/three_line_action_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        tools:text="action"
        app:layout_constraintBottom_toTopOf="@+id/three_line_tertiary_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/three_line_primary_text" />

</androidx.constraintlayout.widget.ConstraintLayout>