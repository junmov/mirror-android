<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="cn.junmov.mirror.budget.ui.CategoryFormViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".budget.ui.CategoryFormDialog">

        <cn.junmov.mirror.core.widget.SheetTitle
            android:id="@+id/category_form_title"
            onDone="@{() -> vm.submitCategory()}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="分类编辑" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/il_category_parent"
            style="@style/Theme.Mirror.Spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/category_form_title">

            <AutoCompleteTextView
                android:id="@+id/spinner_category_parent"
                hideKeyboardOnFocus="@{true}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="上级分类"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/il_category_type"
            style="@style/Theme.Mirror.Spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/il_category_parent"
            app:layout_constraintStart_toStartOf="@+id/il_category_parent"
            app:layout_constraintTop_toBottomOf="@+id/il_category_parent">

            <AutoCompleteTextView
                android:id="@+id/spinner_category_type"
                hideKeyboardOnFocus="@{true}"
                noFilterText="@{vm.inputType.toString()}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="分类类型"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/il_category_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/il_category_parent"
            app:layout_constraintStart_toStartOf="@+id/il_category_parent"
            app:layout_constraintTop_toBottomOf="@+id/il_category_type">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="分类名称"
                android:maxLines="1"
                android:text="@={vm.inputName}" />
        </com.google.android.material.textfield.TextInputLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>