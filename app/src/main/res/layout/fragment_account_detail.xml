<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="cn.junmov.mirror.account.ui.AccountDetailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="cn.junmov.mirror.account.ui.AccountDetailFragment">


        <TextView
            android:id="@+id/label_account_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="账户余额"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_account_balance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="@{vm.balance}"
            android:textAppearance="?attr/textAppearanceHeadline4"
            app:layout_constraintEnd_toStartOf="@+id/btn_adjust_balance"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_account_balance"
            tools:text="60000" />

        <TextView
            android:id="@+id/tv_account_type"
            style="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@{vm.account.type.toString()}"
            app:layout_constraintStart_toStartOf="@+id/label_account_balance"
            app:layout_constraintTop_toBottomOf="@+id/tv_account_balance"
            tools:text="资金账户" />

        <TextView
            android:id="@+id/tv_account_create_at"
            style="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@{vm.createAt}"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_account_type"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="创建于2020-09-13" />

        <Button
            android:id="@+id/btn_adjust_balance"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            isGone="@{!(vm.account.type.hasNormalBalance())}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="调整"
            app:layout_constraintBottom_toBottomOf="@+id/tv_account_balance"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_account_balance" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_account_children"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_account_children"
            tools:itemCount="6"
            tools:listitem="@layout/list_item_single_line" />

        <TextView
            android:id="@+id/label_account_children"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="子账户"
            app:layout_constraintStart_toStartOf="@+id/label_account_balance"
            app:layout_constraintTop_toBottomOf="@+id/tv_account_type" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>