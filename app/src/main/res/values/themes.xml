<resources>
    <!-- Base application theme. -->
    <style name="Theme.Mirror" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/mirror_green_500</item>
        <item name="colorPrimaryVariant">@color/mirror_green_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/mirror_yellow_500</item>
        <item name="textInputStyle">@style/Theme.Mirror.TextField</item>
    </style>

    <style name="Theme.Mirror.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Mirror.IconButton">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">@dimen/margin_extra_small</item>
        <item name="tint">?attr/colorOnSurface</item>
    </style>

    <style name="Theme.Mirror.TextField" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxBackgroundColor">?attr/colorSurface</item>
    </style>

    <style name="Theme.Mirror.Spinner" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu">
        <item name="boxBackgroundColor">?attr/colorSurface</item>
    </style>
    <style name="Theme.Mirror.Link">
        <item name="android:minHeight">@dimen/single_line_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingStart">@dimen/margin_small</item>
        <item name="android:paddingEnd">@dimen/margin_small</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
</resources>